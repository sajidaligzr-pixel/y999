---
import "../styles/global.css";
import { getImage } from 'astro:assets';
import logoRaw from '../assets/y999-logo.png';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Pre-generate the optimised logo so we can preload its exact URL in <head>
const logoOptimised = await getImage({ src: logoRaw, width: 70, format: 'webp', quality: 90 });
const logo = logoOptimised;

interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
  includeWebsiteSchema?: boolean;
}

const {
  title,
  description,
  keywords,
  ogImage,
  includeWebsiteSchema = false
} = Astro.props;

const canonical = new URL(Astro.url.pathname, "https://y999gameapp.com.pk").href;
// Trailing-slash canonical normalisation: always end sub-pages WITHOUT trailing slash,
// homepage WITH trailing slash — handled automatically by `new URL` above.

// OG image: prefer per-page override, else use the dedicated social banner
const ogImageUrl = ogImage
  ? new URL(ogImage, "https://y999gameapp.com.pk").href
  : "https://y999gameapp.com.pk/og-banner.svg";

const ogImageAlt = "y999 Game — 500+ Casino, Slots & Card Games";

// Build schema array dynamically
const schemaArray = [];

// Add WebSite schema only on homepage
if (includeWebsiteSchema) {
  schemaArray.push({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "y999 Game",
    "url": "https://y999gameapp.com.pk",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://y999gameapp.com.pk/?s={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  });
}

// Add WebPage schema for every page
schemaArray.push({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": title,
  "description": description,
  "url": canonical,
  "inLanguage": "en",
  "isPartOf": {
    "@type": "WebSite",
    "name": "y999 Game",
    "url": "https://y999gameapp.com.pk",
  },
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="y999 Game" />
    {keywords && <meta name="keywords" content={keywords} />}

    <!-- Canonical & hreflang -->
    <link rel="canonical" href={canonical} />
    <link rel="alternate" hreflang="en" href={canonical} />
    <link rel="alternate" hreflang="ur" href={canonical} />
    <link rel="alternate" hreflang="x-default" href={canonical} />

    <!-- LCP image preload: tells browser to start fetching the logo before it parses <header> -->
    <link rel="preload" as="image" href={logo.src} fetchpriority="high" />

    <!-- Favicons & PWA -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href={logo.src} />
    <link rel="manifest" href="/manifest.json" />

    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#22c55e" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:site_name" content="y999 Game" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@y999game" />
    <meta name="twitter:creator" content="@y999game" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <title>{title}</title>

    <!-- Google tag (gtag.js) — replace G-XXXXXXXXXX with your GA4 Measurement ID -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script> -->

    <!-- Global Schema Markup (WebSite + WebPage) -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(schemaArray)} />

    <!-- Slot for page-specific schemas (breadcrumbs, FAQPage, Organization, SoftwareApp, etc.) -->
    <slot name="schema" />

    <style>
      html, body {
        margin: 0;
        width: 100%;
        min-height: 100%;
        font-family: system-ui, -apple-system, sans-serif;
      }
      /* Reserve space for the fixed header (h-20 = 80px) to prevent CLS */
      body > header + * {
        padding-top: 80px;
      }
    </style>
  </head>

  <body>
    <Header />
    <slot />
    <Footer />

    <script>
      document.addEventListener('contextmenu', (e) => {
        e.preventDefault();
      }, { passive: false });
    </script>
  </body>
</html>
