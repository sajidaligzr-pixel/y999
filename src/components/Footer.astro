    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-800/50 flex flex-col md:flex-row justify-between items-center gap-4 text-sm">
      <p>&copy; {currentYear} y999 Game. All rights reserved.</p>
      <div class="flex gap-6">
        <span class="flex items-center gap-1">
          <span class="w-2 h-2 rounded-full bg-green-500"></span>
          Server Status: Online
