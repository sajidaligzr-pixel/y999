      </div>

      <!-- Quick Links -->
      <div class="space-y-6">
        <h3 class="text-white font-bold text-lg">Quick Links</h3>
        <ul class="space-y-4">
          <li><a href="/" class="hover:text-green-500 transition-colors">Home</a></li>
          <li><a href="/games" class="hover:text-green-500 transition-colors">Games</a></li>
          <li><a href="/download" class="hover:text-green-500 transition-colors">Download APK</a></li>
          <li><a href="/contact" class="hover:text-green-500 transition-colors">Contact Us</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="space-y-6">
        <h3 class="text-white font-bold text-lg">Legal</h3>
        <ul class="space-y-4">
          <li><a href="/privacy-policy" class="hover:text-green-500 transition-colors">Privacy Policy</a></li>
          <li><a href="/terms-conditions" class="hover:text-green-500 transition-colors">Terms & Conditions</a></li>
          <li><a href="/disclaimer" class="hover:text-green-500 transition-colors">Disclaimer</a></li>
        </ul>
      </div>

      <!-- Newsletter/Contact -->
      <div class="space-y-6">
        <h3 class="text-white font-bold text-lg">Platform Support</h3>
        <p class="text-slate-400">Available 24/7 for our players worldwide.</p>
        <div class="flex flex-col gap-4">
          <div class="flex items-center gap-3">
             <span class="w-10 h-10 rounded-lg bg-slate-900 border border-slate-800 flex items-center justify-center text-green-500">
