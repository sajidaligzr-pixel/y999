---
import Layout from '../layouts/Layout.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';

const BASE = "https://y999gameapp.com.pk";

const contactPageSchema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Y999 Game Support",
  "description": "Get in touch with the Y999 support team. We are available 24/7 to assist with your inquiries, account issues, and gaming support.",
  "url": `${BASE}/contact`,
};
---

<Layout 
  title="Contact Us - Y999 Game | 24/7 Customer Support" 
  description="Need help? Contact Y999 Game customer support 24/7 via live chat, email, or social media. We are here to assist you with any questions about the app."
>
  <Fragment slot="schema">
    <BreadcrumbSchema items={[
      { name: "Home", url: `${BASE}/` },
      { name: "Contact", url: `${BASE}/contact` },
    ]} />
    <script type="application/ld+json" is:inline set:html={JSON.stringify(contactPageSchema)} />
  </Fragment>

  <div class="min-h-screen bg-[#101115] pt-32 pb-20 relative overflow-hidden">
    <!-- Decorative particles -->
    <div class="absolute inset-0 pointer-events-none z-0" aria-hidden="true" style="background: radial-gradient(circle at top left, rgba(34,197,94,0.05), transparent 40%), radial-gradient(circle at bottom right, rgba(34,197,94,0.05), transparent 40%);"></div>

    <div class="container mx-auto px-5 max-w-6xl relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 bg-green-500/10 border border-green-500/30 rounded-full text-green-500 text-xs font-bold uppercase tracking-wider mb-4">
          GET IN TOUCH
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 tracking-tight">
          Contact <span class="text-green-500">Support</span>
        </h1>
        <p class="text-lg text-white max-w-2xl mx-auto leading-relaxed">
          Need help? Our customer support team is available 24/7. Fill out the form below or reach out to us directly through our support channels.
        </p>
      </div>

      <div>
        
      

        <!-- Contact Form -->
        <div>
          <div class="bg-[#1b1c24] border border-white/5 rounded-2xl p-8 md:p-12 shadow-xl">
            <h2 class="text-3xl font-bold text-white mb-8">Send a Message</h2>
            
            <form action="#" method="POST" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div class="space-y-2">
                  <label for="name" class="block text-sm font-medium text-white">Your Name *</label>
                  <input type="text" id="name" name="name" required class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder:text-white/30 focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 transition-all" placeholder="John Doe">
                </div>
                
                <!-- Email -->
                <div class="space-y-2">
                  <label for="email" class="block text-sm font-medium text-white">Email Address *</label>
                  <input type="email" id="email" name="email" required class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder:text-white/30 focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 transition-all" placeholder="john@example.com">
                </div>
              </div>
              
              <!-- Subject -->
              <div class="space-y-2">
                <label for="subject" class="block text-sm font-medium text-white">Subject *</label>
                <select id="subject" name="subject" required class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 transition-all appearance-none cursor-pointer">
                  <option value="general" class="bg-[#1b1c24]">General Inquiry</option>
                  <option value="account" class="bg-[#1b1c24]">Account & Login Issues</option>
                  <option value="payment" class="bg-[#1b1c24]">Deposits & Withdrawals</option>
                  <option value="game" class="bg-[#1b1c24]">Game Technical Issue</option>
                  <option value="other" class="bg-[#1b1c24]">Other</option>
                </select>
              </div>

              <!-- Message -->
              <div class="space-y-2">
                <label for="message" class="block text-sm font-medium text-white">Your Message *</label>
                <textarea id="message" name="message" rows="5" required class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder:text-white/30 focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 transition-all resize-none" placeholder="How can we help you today?"></textarea>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="w-full bg-green-500 text-black font-bold text-lg py-4 rounded-xl hover:bg-green-400 transition-all shadow-[0_0_20px_rgba(34,197,94,0.2)] hover:shadow-[0_0_30px_rgba(34,197,94,0.4)] flex items-center justify-center gap-2 mt-4">
                Send Message
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
              </button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</Layout>
